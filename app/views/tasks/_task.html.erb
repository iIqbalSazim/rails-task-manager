<section class="my-5 mx-auto rounded-5 d-flex flex-column">
  <div class="card text-center bg-light shadow-sm">
		<h3 class="card-header text-primary">
			<%= task.title %>
		</h3>
		<div class="card-body text-body">
			<div class="card-text d-flex justify-content-between">
        <span><%= task.body %></span>
        <div class="d-flex">
          <%= link_to "Edit", "/tasks/#{task.id}/edit", class: "btn btn-secondary mx-2" %>
          <%= button_to "Delete", "/tasks/#{task.id}", method: :delete, class: "btn btn-danger mx-2" %>
          <%= link_to "Task details", "/tasks/#{task.id}", class: "btn btn-info mx-2" %>
        </div>
			</div>
		</div>
	</div>
<section>
