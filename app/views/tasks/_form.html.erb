<%= form_with model: task do |form| %>
  <%= render "shared/errors", form: form %>

  <div class="container-xl text-center">
    <div class="row mb-3">
      <%= form.label :title, class: "form-label fs-3" %>
      <%= form.text_field :title, class: "form-control"%>
    </div>

    <div class="row mb-3">
      <%= form.label :description, class: "fs-3 form-label" %>
      <%= form.text_area :body, class: "form-control"  %>
    </div>
    
    <%= form.submit "Submit", class: "my-2 btn btn-md btn-primary" %>
  </div>
<% end %>

